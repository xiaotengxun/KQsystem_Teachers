<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/jb_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/jb_r11"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <TextView
                android:id="@+id/jdtb_detail_coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sfsfsfsf"
                android:textSize="23sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jb_r11" >

            <TextView
                android:id="@+id/jdtb_detail_course_week"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="-70dp"
                android:text="sfsfsfsf"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/jdtb_detail_course_jtime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="70dp"
                android:text="sfsfsfsf"
                android:textSize="23sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/jb_rl"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp" >

        <ListView
            android:id="@+id/jdtb_detail_listv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/jdtb_delete_bg"
        android:gravity="center"
        android:layout_height="50dp" >
        <Button 
            android:id="@+id/jdtb_detail_delete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/btn_delete"
            android:textColor="@color/color_blue"
            android:textSize="23sp"            
            />
    </RelativeLayout>

</RelativeLayout>