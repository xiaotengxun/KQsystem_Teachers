<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/jd_rel1"
        android:layout_marginTop="-10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/jdtb_checkbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:checked="false" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jd_rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/jd_rel1" >

        <TextView
            android:id="@+id/jd_sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:text="陈书万" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/jd_rel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/jd_sclass"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content"
            android:text="计科113" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/jd_sno"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color_black"
            android:layout_height="wrap_content"
            android:text="2011111112"
            />
    </RelativeLayout>

</RelativeLayout>