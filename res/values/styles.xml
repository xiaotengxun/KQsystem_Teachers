<resources>

    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyTheme.NoTitleBar.CustomBackground" parent="@android:Theme.Black">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">

        <!-- 这是item的背景修改，不按时透明，按时显示绿色 -->
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextStyle</item>
    </style>

    <style name="MyActionBarTabStyle" parent="android:style/Widget.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tab_background</item>
    </style>

    <style name="MyActionBarTabTextStyle" parent="android:style/Widget.ActionBar.TabText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="teacher_login_radiobutton" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/parent_login_checkbox</item>
    </style>

    <style name="MyRadioButtonStyle">
        <item name="android:button">@drawable/myradiobuttonselector</item>
    </style>

    <style name="MyLoginButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="MySpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/kqresult_spinner</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="MyEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/login_edittext</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>